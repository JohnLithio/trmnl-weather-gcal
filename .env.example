# Google OAuth credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback

# Calendar configuration
# Comma-separated list of calendar IDs to fetch events from
# Use "primary" for your main calendar
CALENDAR_IDS=primary

# Timezone (IANA format, e.g., America/New_York, Europe/London)
TIMEZONE=America/New_York

# API Security (optional, but recommended for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET=

# Weather configuration (Open-Meteo - free, no API key required)
# Find your coordinates at: https://www.latlong.net/
WEATHER_LAT=40.7128
WEATHER_LON=-74.0060

# GCP Deployment Configuration
GCP_PROJECT=your-project-id
GCP_REGION=us-central1
GCP_SERVICE_NAME=your-service-name
GCP_ARTIFACT_REPO=your-artifact-repo
